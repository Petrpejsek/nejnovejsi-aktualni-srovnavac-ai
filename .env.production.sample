# Production Environment Variables
# Copy to .env.production and fill in actual values
# ⚠️  NEVER commit real credentials to git!

# Base URL
NEXT_PUBLIC_BASE_URL=https://comparee.ai
GSC_SITE_URL=https://comparee.ai/

# Database
DATABASE_URL=postgresql://__DB_USER__:__DB_PASS__@__DB_HOST__:__DB_PORT__/__DB_NAME__

# Google Search Console Integration
GSC_SYNC_ENABLED=true
GSC_CRON_TOKEN=__SET_IN_ENV_AND_GH_SECRETS__
GCP_SA_JSON_BASE64=__BASE64_OF_SERVICE_ACCOUNT_JSON__

# NextAuth
NEXTAUTH_URL=https://comparee.ai
NEXTAUTH_SECRET=__SET__

# Payment Processing
STRIPE_SECRET_KEY=__SET__
STRIPE_WEBHOOK_SECRET=__SET__

# AI Services
OPENAI_API_KEY=__SET__
ANTHROPIC_API_KEY=__SET__

# Email Configuration
SMTP_HOST=__SET__
SMTP_PORT=587
SMTP_USER=__SET__
SMTP_PASS=__SET__
