{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "routes": [
    {
      "src": "/screenshots/(.*)",
      "dest": "/static/screenshots/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/admin/:path*",
      "destination": "/admin/:path*"
    },
    {
      "source": "/company-admin/:path*", 
      "destination": "/company-admin/:path*"
    }
  ]
} 