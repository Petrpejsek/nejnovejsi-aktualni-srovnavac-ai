# Database (Supabase)
DATABASE_URL="postgresql://user:password@host:port/database?schema=public"

# Authentication (Google OAuth)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key"

# Admin controls - set to 'false' on production to disable admin upload functionality
NEXT_PUBLIC_ENABLE_ADMIN_UPLOAD="true"

# Vercel ISR bypass (pro deployment s velkými daty)
VERCEL_BYPASS_FALLBACK_OVERSIZED_ERROR="1"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Admin Upload funkcionalita (pouze pro development nebo explicitní povolení)
# Ponechte prázdné nebo nastavte false pro produkci
NEXT_PUBLIC_ENABLE_ADMIN_UPLOAD="false"

# Pro povolení na produkci nastavte:
# NEXT_PUBLIC_ENABLE_ADMIN_UPLOAD="true" 