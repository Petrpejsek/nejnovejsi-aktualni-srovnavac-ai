<h1>{{ t.headings.password_reset or 'Reset your password' }}</h1>
<p>{{ t.messages.password_reset_intro or 'You requested to reset your password.' }}</p>
{% if action_url %}
  <p>
    <a class="btn" href="{{ action_url }}">{{ t.buttons.reset_password or 'Reset password' }}</a>
  </p>
  <p>{{ t.messages.link_expires or 'If the button does not work, copy the link below:' }}</p>
  <p><a href="{{ action_url }}">{{ action_url }}</a></p>
{% endif %}
<p>{{ t.messages.ignore_if_not_you or 'If you did not request this, you can ignore this email.' }}</p>

