{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "warn",
    "react/no-unescaped-entities": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.tsx", "**/*.ts"],
      "excludedFiles": ["app/api/**", "pages/api/**"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "Program:has(> ExpressionStatement[expression.callee.object.value='use client']) MemberExpression[object.name='process'][property.name='env']",
            "message": "Do not access process.env in Client Components. Use NEXT_PUBLIC_* via app/lib/env.client.ts or fetch from server."
          }
        ],
        "no-restricted-imports": [
          "error",
          {
            "paths": ["@prisma/client", "fs", "path", "child_process", "server-only"],
            "message": "Server-only modules must not be imported in Client Components."
          }
        ]
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "scripts/"
  ]
} 